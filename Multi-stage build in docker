# Docker File:

FROM node AS build
WORKDIR /usr/src/app
COPY package.json .
COPY . .
RUN npm install
CMD ["node","index.js"]



FROM node AS production
WORKDIR /usr/src/app
COPY --from=build /usr/src/app/ ./dist
COPY --from=build /usr/src/app/package*.json ./

RUN npm install 

EXPOSE 3000

CMD ["node","dist/index.js"]
                - WORDPRESS_DB_NAME=wordpressdb

networks:
   mynet:
      driver: bridge
volumes:
   myvol:

#-To compose:
docker-compose up
#if we create compose file with another name
docker-compose -f file.yml up
